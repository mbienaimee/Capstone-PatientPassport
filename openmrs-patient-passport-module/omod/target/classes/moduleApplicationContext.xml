<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Define the Observation Save Advice -->
    <bean id="observationSaveAdvice" 
          class="org.openmrs.module.patientpassport.advice.ObservationSaveAdvice"/>

    <!-- Auto-proxy creator to intercept obsService bean -->
    <bean class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
        <property name="beanNames">
            <list>
                <value>obsService</value>
            </list>
        </property>
        <property name="interceptorNames">
            <list>
                <value>observationSaveAdvice</value>
            </list>
        </property>
    </bean>

</beans>
