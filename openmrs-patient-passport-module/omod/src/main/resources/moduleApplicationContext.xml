<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

    <!-- Define the Observation Save Advice -->
    <bean id="observationSaveAdvice" 
          class="org.openmrs.module.patientpassport.advice.ObservationSaveAdvice"/>

    <!-- Define AOP Configuration to intercept saveObs method -->
    <aop:config>
        <aop:pointcut id="saveObsPointcut" 
                      expression="execution(* org.openmrs.api.ObsService.saveObs(..))"/>
        
        <aop:advisor advice-ref="observationSaveAdvice" 
                     pointcut-ref="saveObsPointcut"/>
    </aop:config>

</beans>
