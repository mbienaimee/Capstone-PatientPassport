# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
# MongoDB Atlas connection string
# Get from: https://cloud.mongodb.com/ → Connect → Connect your application
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_TEST_URI=mongodb+srv://username:password@cluster.mongodb.net/database_test?retryWrites=true&w=majority

# JWT Configuration
# SECURITY: Generate secure secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# NEVER commit actual secrets to git - use different secrets for production
JWT_SECRET=your-super-secret-jwt-key-here-REPLACE-WITH-128-CHAR-HEX
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-REPLACE-WITH-128-CHAR-HEX
JWT_REFRESH_EXPIRE=30d

# Password Reset
# SECURITY: Use different secret from JWT_SECRET for defense in depth
JWT_RESET_SECRET=your-reset-secret-key-here-REPLACE-WITH-128-CHAR-HEX
JWT_RESET_EXPIRE=10m

# Email Configuration - Gmail SMTP
# For Gmail: Use App Password (not regular password)
# Generate at: https://myaccount.google.com/apppasswords
# For SendGrid (Production): EMAIL_USER=apikey, EMAIL_PASS=<sendgrid-api-key>
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-16-char-app-password
EMAIL_FROM=PatientPassport <your-email@gmail.com>

# Cloudinary Configuration (OPTIONAL - for file uploads)
# Sign up at: https://cloudinary.com/users/register/free
# Not required if not using file upload features
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=https://jade-pothos-e432d0.netlify.app

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Africa's Talking Configuration (OPTIONAL - for SMS/USSD)
# Sign up at: https://africastalking.com/
# Use 'sandbox' for testing, your username for production
# Not required unless using SMS/USSD features
AFRICASTALKING_API_KEY=your-africastalking-api-key
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_USSD_CODE=*123#

# Security
BCRYPT_ROUNDS=12
# SECURITY: Generate secure session secret using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-session-secret-here-REPLACE-WITH-64-CHAR-HEX

# API Documentation
API_DOCS_PATH=/api-docs

# OpenMRS Configuration
OPENMRS_BASE_URL=http://localhost:8080/openmrs
OPENMRS_USERNAME=admin
OPENMRS_PASSWORD=Admin123

# OpenMRS Database Configuration (for direct DB sync)
OPENMRS_DB_HOST=localhost
OPENMRS_DB_PORT=3306
OPENMRS_DB_USER=openmrs_user
OPENMRS_DB_PASSWORD=your_openmrs_db_password
OPENMRS_DB_NAME=openmrs

# OpenMRS Sync Configuration
# Sync interval in seconds (default: 30 seconds for near real-time)
# Examples: 10 = every 10 seconds, 60 = every minute, 300 = every 5 minutes
OPENMRS_SYNC_INTERVAL_SECONDS=30
