{
  "info": {
    "name": "Patient Passport USSD API",
    "description": "USSD endpoints for Patient Passport access via Africa's Talking",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "USSD Callback",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"sessionId\": \"ATUid_abc123def456\",\n  \"serviceCode\": \"*123#\",\n  \"phoneNumber\": \"+250788123456\",\n  \"text\": \"\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/ussd/callback",
          "host": ["{{base_url}}"],
          "path": ["api", "ussd", "callback"]
        },
        "description": "Africa's Talking USSD callback endpoint"
      },
      "response": []
    },
