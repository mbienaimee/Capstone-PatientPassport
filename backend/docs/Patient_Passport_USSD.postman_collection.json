        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"sessionId\": \"test-session-123\",\n  \"phoneNumber\": \"+250788123456\",\n  \"text\": \"1*1\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/ussd/test",
          "host": ["{{base_url}}"],
          "path": ["api", "ussd", "test"]
