{
  "name": "patient-passport-backend",
  "version": "1.0.0",
  "description": "Backend API for PatientPassport - A secure medical records management system",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon --exec \"ts-node -r dotenv/config src/app.ts\"",
    "dev:mock": "nodemon src/app-dev.ts",
    "build": "tsc && tsc-alias",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docs": "node docs/serve-swagger.js",
    "docs:dev": "nodemon docs/serve-swagger.js"
  },
  "keywords": [
    "medical-records",
    "patient-management",
    "healthcare",
    "api",
    "typescript",
    "express",
    "mongodb"
  ],
  "author": "PatientPassport Team",
  "license": "MIT",
  "dependencies": {
    "@auth0/nextjs-auth0": "^4.10.0",
    "@types/socket.io-client": "^1.4.36",
    "africastalking": "^0.7.7",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "mysql2": "^3.15.3",
    "nodemailer": "^6.10.1",
    "route-auth": "^2.0.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
