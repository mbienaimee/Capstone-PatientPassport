<?xml version="1.0" encoding="UTF-8"?>
<page id="patientpassport.patientDashboard" 
      title="Patient Passport" 
      controller="org.openmrs.module.patientpassportcore.web.controller.PatientPassportDashboardController"
      xmlns="http://openmrs.org">

    <require privilege="View Patient Passport"/>

    <body>
        <div class="patientpassport-dashboard">
            <h2>Patient Passport</h2>
            
            <div class="passport-info">
                <div class="info-section">
                    <h3>Universal Patient ID</h3>
                    <div class="universal-id">
                        <c:choose>
                            <c:when test="${universalId != null}">
                                <span class="id-value">${universalId}</span>
                                <button type="button" onclick="copyToClipboard('${universalId}')">Copy</button>
                            </c:when>
                            <c:otherwise>
                                <span class="no-id">No Universal ID assigned</span>
                                <button type="button" onclick="generateUniversalId()">Generate Universal ID</button>
                            </c:otherwise>
                        </c:choose>
                    </div>
                </div>

                <div class="info-section">
                    <h3>Passport Status</h3>
                    <div class="status-info">
                        <c:choose>
                            <c:when test="${passportStatus == 'ACTIVE'}">
                                <span class="status-active">✓ Active</span>
                            </c:when>
                            <c:when test="${passportStatus == 'PENDING'}">
                                <span class="status-pending">⏳ Pending</span>
                            </c:when>
                            <c:otherwise>
                                <span class="status-inactive">✗ Not Created</span>
                            </c:otherwise>
                        </c:choose>
                    </div>
                </div>

                <div class="info-section">
                    <h3>Actions</h3>
                    <div class="action-buttons">
                        <c:if test="${universalId != null}">
                            <button type="button" onclick="viewPassport()">View Passport</button>
                            <button type="button" onclick="syncPassport()">Sync with Passport</button>
                        </c:if>
                        <button type="button" onclick="emergencyOverride()">Emergency Override</button>
                    </div>
                </div>
            </div>

            <div class="audit-section">
                <h3>Access History</h3>
                <div id="auditLogs">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Action</th>
                                <th>Access Time</th>
                                <th>IP Address</th>
                            </tr>
                        </thead>
                        <tbody>
                            <c:forEach var="log" items="${auditLogs}">
                                <tr>
                                    <td>${log.user.username}</td>
                                    <td>${log.action}</td>
                                    <td>${log.accessTime}</td>
                                    <td>${log.ipAddress}</td>
                                </tr>
                            </c:forEach>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Emergency Override Modal -->
            <div id="emergencyModal" class="modal" style="display: none;">
                <div class="modal-content">
                    <span class="close" onclick="closeEmergencyModal()">&times;</span>
                    <h3>Emergency Override</h3>
                    <p>This action will grant emergency access to the patient's passport data.</p>
                    <form id="emergencyForm">
                        <div class="form-group">
                            <label for="justification">Justification:</label>
                            <textarea id="justification" name="justification" rows="4" cols="50" required></textarea>
                        </div>
                        <div class="form-actions">
                            <button type="button" onclick="submitEmergencyOverride()">Grant Override</button>
                            <button type="button" onclick="closeEmergencyModal()">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script>
            function generateUniversalId() {
                if (confirm('Generate a new Universal Patient ID for this patient?')) {
                    fetch('/openmrs/ws/rest/v1/patientpassport/generate-universal-id', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: 'patientUuid=${patient.uuid}'
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Universal ID generated: ' + data.universalId);
                            location.reload();
                        } else {
                            alert('Error generating Universal ID: ' + data.message);
                        }
                    })
                    .catch(error => {
                        alert('Error: ' + error.message);
                    });
                }
            }

            function copyToClipboard(text) {
                navigator.clipboard.writeText(text).then(function() {
                    alert('Universal ID copied to clipboard');
                }, function(err) {
                    alert('Error copying to clipboard');
                });
            }

            function viewPassport() {
                window.open('http://localhost:3000/patient/${universalId}', '_blank');
            }

            function syncPassport() {
                fetch('/openmrs/ws/rest/v1/patientpassport/sync-patient', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: 'patientUuid=${patient.uuid}'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Patient data synced successfully');
                    } else {
                        alert('Error syncing patient: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Error: ' + error.message);
                });
            }

            function emergencyOverride() {
                document.getElementById('emergencyModal').style.display = 'block';
            }

            function closeEmergencyModal() {
                document.getElementById('emergencyModal').style.display = 'none';
                document.getElementById('justification').value = '';
            }

            function submitEmergencyOverride() {
                var justification = document.getElementById('justification').value;
                if (!justification.trim()) {
                    alert('Please provide a justification for the emergency override');
                    return;
                }

                fetch('/openmrs/ws/rest/v1/patientpassport/emergency-override', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: 'patientUuid=${patient.uuid}&justification=' + encodeURIComponent(justification)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Emergency override granted');
                        closeEmergencyModal();
                        location.reload();
                    } else {
                        alert('Error granting emergency override: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Error: ' + error.message);
                });
            }

            // Close modal when clicking outside
            window.onclick = function(event) {
                var modal = document.getElementById('emergencyModal');
                if (event.target == modal) {
                    closeEmergencyModal();
                }
            }
        </script>

        <style>
            .patientpassport-dashboard {
                padding: 20px;
            }
            
            .passport-info {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
                gap: 20px;
                margin-bottom: 30px;
            }
            
            .info-section {
                padding: 20px;
                border: 1px solid #ddd;
                border-radius: 5px;
                background-color: #f9f9f9;
            }
            
            .info-section h3 {
                margin-top: 0;
                color: #333;
            }
            
            .universal-id {
                display: flex;
                align-items: center;
                gap: 10px;
            }
            
            .id-value {
                font-family: monospace;
                font-weight: bold;
                color: #007cba;
            }
            
            .no-id {
                color: #666;
                font-style: italic;
            }
            
            .status-active {
                color: #28a745;
                font-weight: bold;
            }
            
            .status-pending {
                color: #ffc107;
                font-weight: bold;
            }
            
            .status-inactive {
                color: #dc3545;
                font-weight: bold;
            }
            
            .action-buttons {
                display: flex;
                flex-direction: column;
                gap: 10px;
            }
            
            button {
                background-color: #007cba;
                color: white;
                padding: 8px 16px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }
            
            button:hover {
                background-color: #005a87;
            }
            
            .audit-section {
                margin-top: 30px;
            }
            
            table {
                width: 100%;
                border-collapse: collapse;
            }
            
            table td, table th {
                padding: 8px;
                border-bottom: 1px solid #eee;
            }
            
            table th {
                background-color: #f5f5f5;
                border-bottom: 2px solid #ddd;
            }
            
            .modal {
                position: fixed;
                z-index: 1000;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0,0,0,0.5);
            }
            
            .modal-content {
                background-color: white;
                margin: 15% auto;
                padding: 20px;
                border-radius: 5px;
                width: 80%;
                max-width: 500px;
            }
            
            .close {
                color: #aaa;
                float: right;
                font-size: 28px;
                font-weight: bold;
                cursor: pointer;
            }
            
            .close:hover {
                color: black;
            }
            
            .form-group {
                margin-bottom: 15px;
            }
            
            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }
            
            .form-group textarea {
                width: 100%;
                padding: 8px;
                border: 1px solid #ddd;
                border-radius: 4px;
            }
            
            .form-actions {
                display: flex;
                gap: 10px;
                justify-content: flex-end;
            }
        </style>
    </body>
</page>











